---
layout: base.liquid
title: Socrates News
---

<h1 id="latest-news" class="mt-4 mb-4" style="font-weight:bold; font-size:28px;">Latest News</h1>

<div class="row news-articles">
  {% for item in collections.news reversed %}
    <div class="news-card col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        {% if item.data.image %}
          <img src="{{ item.data.image }}" class="card-img-top" alt="{{ item.data.title }}">
        {% endif %}
        <div class="card-body d-flex flex-column">
          {% if item.data.category %}
            <span class="badge badge-info mb-2">{{ item.data.category }}</span>
          {% endif %}
          <h5 class="card-title mb-3" style="font-size: 1.25rem; font-weight: 600; min-height: 3rem;">{{ item.data.title }}</h5>
          <p class="card-text flex-grow-1 mb-3" style="font-size: 1rem; line-height: 1.5;">{{ item.templateContent | truncate: 20 }}</p>
          <a href="{{ item.url }}" class="btn btn-primary mt-auto" style="background-color: darkcyan; padding: 8px 16px; font-weight: 500;">Read More</a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<hr class="mt-4 mb-4">

<h2 id="headlines" class="mt-4 mb-4" style="font-weight:bold; font-size:28px;">Headlines</h2>

<!-- News outlet buttons -->
<div class="text-center mb-4">
  <button class="btn btn-news m-1 active" onclick="showHeadlines('punch', this)">Punch</button>
  <button class="btn btn-news m-1" onclick="showHeadlines('channels', this)">Channels TV</button>
  <button class="btn btn-news m-1" onclick="showHeadlines('vanguard', this)">Vanguard</button>
  <button class="btn btn-news m-1" onclick="showHeadlines('business-day', this)">Business Day</button>
  <button class="btn btn-news m-1" onclick="showHeadlines('tribune', this)">Tribune</button>
  <button class="btn btn-news m-1" onclick="showHeadlines('daily-trust', this)">Daily Trust</button>
  <button class="btn btn-news m-1" onclick="showHeadlines('daily-times', this)">Daily Times</button>
  <button class="btn btn-news m-1" onclick="showHeadlines('sahara-reporters', this)">Sahara Reporters</button>
</div>

<!-- Headlines container -->
<div id="headlines-container" class="card shadow-sm">
  <div class="card-header bg-dark text-white">
    <h5 id="headline-title" class="mb-0" style="font-size: 1.3rem;">Punch News</h5>
  </div>
  <div class="card-body">
    <!-- Spinner -->
    <div id="loading-spinner" class="text-center my-3" style="display: none;">
      <div class="spinner-border text-secondary" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>

    <!-- Headlines list -->
    <ul class="list-group list-group-flush" id="headlines-list"></ul>
  </div>
</div>

<script>
  let allHeadlines = {};

  async function fetchHeadlines() {
    const container = document.getElementById("headlines-list");
    const spinner = document.getElementById("loading-spinner");

    spinner.style.display = "block";  // show spinner
    container.innerHTML = "";

    try {
      const res = await fetch("/.netlify/functions/get-headlines");
      allHeadlines = await res.json();

      spinner.style.display = "none"; // hide spinner
      showHeadlines("punch");
    } catch (err) {
      console.error("Error loading headlines:", err);
      spinner.style.display = "none";
      container.innerHTML =
        "<li class='list-group-item text-danger'>‚ùå Failed to load headlines.</li>";
    }
  }

  function showHeadlines(outlet, btn) {
    const container = document.getElementById("headlines-list");
    const spinner = document.getElementById("loading-spinner");
    const title = document.getElementById("headline-title");

    spinner.style.display = "block";
    container.innerHTML = "";

    document.querySelectorAll(".btn-news").forEach(b => b.classList.remove("active"));
    if (btn) btn.classList.add("active");

    setTimeout(() => {
      spinner.style.display = "none";
      
      if (!allHeadlines[outlet] || allHeadlines[outlet].length === 0) {
        container.innerHTML = "<li class='list-group-item text-muted'>No headlines available</li>";
        title.textContent = outlet.replace("-", " ").toUpperCase();
        return;
      }

      title.textContent = outlet.replace("-", " ").replace(/\b\w/g, c => c.toUpperCase());
      allHeadlines[outlet].forEach(item => {
        const li = document.createElement("li");
        li.className = "list-group-item";
        li.innerHTML = `<a href="${item.link}" target="_blank" style="font-size: 1.05rem;">${item.title}</a>`;
        container.appendChild(li);
      });
    }, 400);
  }

  fetchHeadlines();
</script>
