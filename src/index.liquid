<h1 id="latest-news" class="section-title">Latest News</h1>
<meta name="e1200a3e63a1f419bf8d86f655f7b8dbf68ba53e" content="e1200a3e63a1f419bf8d86f655f7b8dbf68ba53e" />
<meta name="referrer" content="no-referrer-when-downgrade" />

<div class="news-articles">
  {% for item in collections.news reversed %}
    <div class="news-card">
      <div class="card">
        {% if item.data.image %}
          <img src="{{ item.data.image }}" class="card-img" alt="{{ item.data.title }}">
        {% endif %}
        <div class="card-body">
          {% if item.data.category %}
            <span class="category-tag">{{ item.data.category }}</span>
          {% endif %}
          <h5 class="card-title">{{ item.data.title }}</h5>
          <p class="card-text">{{ item.templateContent | truncate: 25 }}</p>
          <a href="{{ item.url }}" class="btn-read">Read More</a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<hr class="divider">

<h2 id="headlines" class="section-title">Headlines</h2>

<!-- News outlet buttons -->
<div class="outlet-buttons">
  <button class="btn-news active" onclick="showHeadlines('punch', this)">Punch</button>
  <button class="btn-news" onclick="showHeadlines('channels', this)">Channels TV</button>
  <button class="btn-news" onclick="showHeadlines('vanguard', this)">Vanguard</button>
  <button class="btn-news" onclick="showHeadlines('business-day', this)">Business Day</button>
  <button class="btn-news" onclick="showHeadlines('tribune', this)">Tribune</button>
  <button class="btn-news" onclick="showHeadlines('daily-trust', this)">Daily Trust</button>
  <button class="btn-news" onclick="showHeadlines('daily-times', this)">Daily Times</button>
  
</div>

<!-- Headlines container -->
<div id="headlines-container" class="headlines-card">
  <div class="headlines-header">
    <h5 id="headline-title">Punch News</h5>
  </div>
  <div class="headlines-body">
    <!-- Spinner -->
    <div id="loading-spinner" class="spinner" style="display: none;">
      <div class="spinner-circle"></div>
      <p>Loading...</p>
    </div>

    <!-- Headlines list -->
    <ul id="headlines-list" class="headlines-list"></ul>
  </div>
</div>

<script>
  let allHeadlines = {};

  async function fetchHeadlines() {
    const container = document.getElementById("headlines-list");
    const spinner = document.getElementById("loading-spinner");

    spinner.style.display = "block";
    container.innerHTML = "";

    try {
      const res = await fetch("/.netlify/functions/get-headlines");
      allHeadlines = await res.json();

      spinner.style.display = "none";
      showHeadlines("punch");
    } catch (err) {
      console.error("Error loading headlines:", err);
      spinner.style.display = "none";
      container.innerHTML =
        "<li class='headline-item error'>‚ùå Failed to load headlines.</li>";
    }
  }

  function showHeadlines(outlet, btn) {
    const container = document.getElementById("headlines-list");
    const spinner = document.getElementById("loading-spinner");
    const title = document.getElementById("headline-title");

    spinner.style.display = "block";
    container.innerHTML = "";

    document.querySelectorAll(".btn-news").forEach(b => b.classList.remove("active"));
    if (btn) btn.classList.add("active");

    setTimeout(() => {
      spinner.style.display = "none";
      
      if (!allHeadlines[outlet] || allHeadlines[outlet].length === 0) {
        container.innerHTML = "<li class='headline-item empty'>No headlines available</li>";
        title.textContent = outlet.replace("-", " ").toUpperCase();
        return;
      }

      title.textContent = outlet.replace("-", " ").replace(/\b\w/g, c => c.toUpperCase());
      allHeadlines[outlet].forEach(item => {
        const li = document.createElement("li");
        li.className = "headline-item";
        li.innerHTML = `<a href="${item.link}" target="_blank">${item.title}</a>`;
        container.appendChild(li);
      });
    }, 400);
  }

  fetchHeadlines();
</script>
<script src="ad.js"></script>
